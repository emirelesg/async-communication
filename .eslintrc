{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "rules": {
    // Enforce the use of extensions for all imports.
    "import/extensions": ["error", "always"],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "printWidth": 80,
        "tabWidth": 2,
        "trailingComma": "none"
      }
    ],
    "no-console": "off",
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ]
  },
  "plugins": ["prettier"]
}
